#! /bin/sh

set -e

@MPIRUN@ -n 1 ./test_mrc_f3 --mrc_io_type xdmf2_collective \
    --mrc_crds_type rectilinear --case 2

TEST=f3_1
for a in reference_results/$TEST/*.xdmf; do 
    b=`basename $a`
    diff -u $a $b
done

for a in reference_results/$TEST/*.h5.dump; do 
    b=`basename $a .dump`
    h5dump $b > $b.dump
    diff -u $a $b.dump
    rm $b.dump
done

