ESTATUS=0
for fldtype in "float" "float_aos" "double" "double_aos" "int"
do
    for nproc in 1 2
    do
	echo "Testing ${fldtype} with ${nproc} procs"
	@MPIRUN@ -n ${nproc} ./test_mrc_fld_io --mrc_fld_type ${fldtype} --mrc_domain_npx ${nproc} \
	    --mrc_io_type ${IOTYPE}
	teststatus=$?
	if test $teststatus -ne 0
	then
	    echo "FAILED"
	    ESTATUS=${teststatus}
	else
	    echo "PASSED"
	fi
	
    done
done

exit $ESTATUS
