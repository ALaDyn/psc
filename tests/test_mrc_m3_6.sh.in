#! /bin/sh

set -e

@MPIRUN@ -n 4 ./test_mrc_m3 --npx 1 --npy 4 --npz 4 --mrc_io_type xdmf_collective --mrc_io_nr_writers 4 --mrc_crds_type multi_rectilinear

TEST=6
for a in reference_results/$TEST/*.xdmf; do 
    b=`basename $a`
    sed 's/uid-0x[0-9a-f]*/uid/g' $b | diff -b -u $a -
done

for a in reference_results/$TEST/*.h5.dump; do 
    b=`basename $a .dump`
    h5dump $b > $b.dump
    sed 's/uid-0x[0-9a-f]*/uid/g' $b.dump | diff -b -I 'STRSIZE [1-9][0-9]' -u $a -
    rm $b.dump
done

