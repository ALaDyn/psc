#/bin/bash
# file:    mkanim
# date:    10-26-2003 by A.Kemp
# purpose: convert large eps files into small jpgs to view with xv or animate 
#
for i in $1
do 
	echo ------------------------- $i
	gs -sDEVICE=jpeg -dNOPAUSE -g1400x250 -dEPSCrop -r400x400 -sOutputFile=$i.jpg $i -c showpage -c quit
done
exit
